
@model IEnumerable<Kamen.Models.Vrsta>

<div class="container p-3">
    
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary" >Lista vrsti</h2>
        </div>
    
        <div class="col-6 text-right">
            <a asp-controller="Vrsta" asp-action="Create" class="btn btn-outline-primary"><i class="fas fa-plus"></i> &nbsp; Dodati novu vrstu</a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thread>
                <tr>
                    <th>Ime vrste</th>
                    <th>Redoslijed prikaza</th>
                    <th>Radnje sa podacima</th>
                </tr>
            </thread>
           
            <tbody> 
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="33%">@obj.Naziv</td>
                        <td width="33%">@obj.RedPrikaz</td>
                        <td width="33%" class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Vrsta" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary"><i class="far fa-edit"></i> &nbsp;Urediti</a>
                                <a asp-controller="Vrsta" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger"><i class="far fa-trash-alt"></i> &nbsp;Izbrisati</a>
                            </div>
                        </td>
                    </tr>
                }                
            </tbody>
        </table>
    }
    else { <p>Nema vrste.</p> }

</div>

