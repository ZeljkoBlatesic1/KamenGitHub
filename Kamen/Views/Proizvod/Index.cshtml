
@model IEnumerable<Kamen.Models.Proizvod>

<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista proizvoda</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-outline-primary"><i class="fas fa-plus"></i> &nbsp; Dodati novi proizvod</a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thread>
                <tr>
                    <th>Ime proizvoda</th>
                    <th>Cijena</th>
                    <th>Vrsta</th>
                    <th>Tip aplikacije</th>
                    <th>Radnje sa podacima</th>
                </tr>
            </thread>

            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="20%">@obj.Naziv</td>
                    <td width="10%">@obj.Cijena</td>
                    <td width="20%">@obj.Vrsta.Naziv</td>
                    <td width="20%">@obj.TipApl.Naziv</td>
                    <td width="30%" class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary"><i class="far fa-edit"></i> &nbsp;Urediti</a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger"><i class="far fa-trash-alt"></i> &nbsp;Izbrisati</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    { <p>Nema proizvoda.</p>}

</div>

