@model Kamen.Models.Proizvod

<form method="post">
    @* for working with pictures *@
    <input asp-for="Id" hidden />

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Obrisati proizvod</h2>
        </div>

        <div class="row">

            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Naziv"></label>
                    </div>

                    <div class="col-8">
                        <input asp-for="Naziv" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Cijena"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Cijena" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Opis"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Opis" class="form-control summernote"> </textarea>
                    </div>
                </div>

                @*DROPDOWN section*@
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="VrstaId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Vrsta.Naziv" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TipAplId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TipApl.Naziv" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100">Delete</button>
                        </div>

                        <div class="col">
                            <a asp-action="Index" class="btn btn-success"><i class="far fa-arrow-alt-circle-left"></i> &nbsp; Nazad</a>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-4 p-4">
                @* Keep this empty *@
                @if (Model.Id!=0) { 
                <img src="@WC.ImagePath@Model.Slika" class="w-100" style="border-radius:5px; border:1px solid  #bbb;">
                }
            </div>
        </div>

    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

    @* Section for TEXT TOOLBAR *@
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disable: true
            });
        });
    </script>

}

