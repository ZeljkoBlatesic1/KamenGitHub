@model Kamen.Models.ViewModels.DetaljiVM

<div class="">
    <form method="post">
      <input asp-for="@Model.Proizvod.Id" hidden />
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Proizvod.Naziv</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning">@((Model.Proizvod.Cijena).ToString("c"))</h1> @*konverzija iz stringa u currency*@
                    </div>
                </div>

                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WC.ImagePath@Model.Proizvod.Slika" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border" style="background-color:lavenderblush">@Model.Proizvod.Vrsta.Naziv</span>
                                        <span class="badge p-3 border" style="background-color:azure">@Model.Proizvod.TipApl.Naziv</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.Proizvod.Opis)</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Nazad na listu</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            @if (Model.ImaGaKart)
                            {
                                <a asp-action="UkloniIzKarta" asp-route-id="@Model.Proizvod.Id" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Ukloni iz kupovine</a>
                            }
                            else
                            {
                                <button type="submit" asp-route-id="@Model.Proizvod.Id" class="btn btn-info form-control btn-lg" style="height:50px;">Dodati u kupovinu</button>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </form>
</div>